<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trantri.tdt_music">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.SongsListActivity" />
        <activity android:name=".Activity.PlaylistActivity" />
        <activity android:name=".Activity.DanhSachAllChuDeActivity" />
        <activity android:name=".Activity.DanhSachTheLoaiTheoChuDeActivity" />
        <activity android:name=".Activity.DanhSachAllAlbumActivity" />
        <activity android:name=".Activity.PlayMusicActivity" />
        <activity
            android:name=".Activity.PlayVideoActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".Activity.MediaplayerVideoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.KaraokeActivity"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".Activity.PlayVideoKaraokeActivity"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>